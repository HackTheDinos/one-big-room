{{>head}}
{{>header}}

<div class="container bs-docs-container">

  <div class="row">
    <h1>{{pageTitle}}</h1>

      <div class="col-lg-12">
        <div class="input-group top-buffer">
            <label for="name">Search by common or scientific name</label>
            <input type="text" class="form-control" id="name">
        </div>
      </div>


        <div class="col-lg-4">

          <div class="input-group top-buffer">
            <label for="group">Group:</label> 
            <input type="text" class="form-control" id="group">
         </div>


          <div class="input-group top-buffer">
            <label for="media">Media</label>
            <input type="text" class="form-control" id="media">
          </div>


          <div class="input-group top-buffer">
            <input type="checkbox" id="annote">
            <label for="annote">Annoted Entries Only</label>
          </div>
        </div>

        <div class="col-lg-4">

          <div class="input-group top-buffer">
            <label for="author">Author</label>
            <input type="text" class="form-control" id="author">
          </div>

          <div class="input-group top-buffer">
            <label for="museum">Museum</label>
            <input type="text" class="form-control">
          </div>

          <input type="submit" class="btn btn-info top-buffer" value="Search">
        </div>

      </div>



  </div>
</div>

{{>footer}}


