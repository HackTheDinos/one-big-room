
{{>head}}
{{>header}}

<div class="container bs-docs-container">

  <div class="row">
    <h1>{{pageTitle}}</h1>

    <ol class="breadcrumb">
      {{#classification}}
        <li>{{.}}</li> 
      {{/classification}} 
    </ol>

    <div class="media">

        <div class="media-left">
          <div class="panel">
            <div class="panel-body">
              <img  src="{{imageUrl}}" class="media-object"/>
            </div>
          </div>
          <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Slice Preview</h3>
            </div>
            <div class="panel-body">
              {{>slice_preview}}
            </div>
          </div>
        </div>

        <div class="media-body">
          <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Details</h3>
            </div>
            <div class="panel-body">
              {{>specimen_detail}}
             </div>
          </div>

          <div class="panel panel-default">
            <div class="panel-body">
              {{wikipedia}}
            </div>
          </div>
        </div>

    </div>
  </div>
</div>
{{>footer}}
